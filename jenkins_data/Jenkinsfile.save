   environment {
     IMAGE_NAME  = "nginx/test"
     dockerImage = ''
   }

podTemplate(label: 'mypod', containers: [
    containerTemplate(name: 'git', image: 'alpine/git', ttyEnabled: true, command: 'cat'),
    containerTemplate(name: 'docker', image: 'docker', command: 'cat', ttyEnabled: true),
    containerTemplate(name: 'ecr', image: 'garland/aws-cli', command: 'cat', ttyEnabled: true)
  ],
  volumes: [
    hostPathVolume(mountPath: '/var/run/docker.sock', hostPath: '/var/run/docker.sock'),
  ]
  ) {
    node('mypod') {
       withCredentials([string(credentialsId: 'ecrlogin', variable: 'USERPASS')])
        stage('Clone repository') {
            container('git') {
                sh 'whoami'
                sh 'hostname -i'
                sh 'git clone -b master https://github.com/palmapalermo/test-repo.git'
            }
        }

         stage('build nginx docker') {
             container('docker') {
                dir('test-repo/') {
                    sh  "docker build -t ${IMAGE_NAME}:${env.BUILD.ID} ."
            }
         }

        stage('push nginx docker image to ecr')
            container('ecr') {
                sh "aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com"



      }        
   }
}
